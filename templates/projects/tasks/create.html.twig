{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-2xl font-bold text-pink-900 mb-6">Create a New Task for Project: {{ project.title }}</h1>

        <div class="mb-4 bg-gray-100 p-4 rounded-lg shadow">
            <p class="text-sm text-gray-700">This task will be associated with the project:</p>
            <p class="text-lg font-semibold text-pink-900">{{ project.title }}</p>
            <p class="text-gray-600">{{ project.description }}</p>
        </div>

        {% if errors is defined and errors|length > 0 %}
            <ul class="mb-4 text-red-600">
                {% for error in errors %}
                    <li class="mb-2">{{ error }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form method="POST" action="{{ path('projects_tasks_store', {'project_id': project.id }) }}" class="space-y-6 bg-white shadow-lg rounded-lg p-6">
            <div>
                <label for="title" class="block text-sm font-medium after:content-['*'] after:text-red-500">Title:</label>
                <input type="text" id="title" name="title" required class="bg-white w-full p-2 border border-gray-300 rounded">
            </div>

            <div>
                <label for="description" class="block text-sm font-medium">Description:</label>
                <textarea id="description" name="description" class="bg-white w-full p-2 border border-gray-300 rounded"></textarea>
            </div>

            <button type="submit" class="w-full bg-pink-900 text-white py-2 rounded hover:bg-pink-800 hover:cursor-pointer">Add Task</button>
        </form>

        <div class="mt-4">
            <a href="{{ path('tasks_index') }}" class="text-pink-900 hover:underline">Back to Task List</a>
        </div>
    </div>
{% endblock %}